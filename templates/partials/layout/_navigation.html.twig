<nav>
    <a href="{{ path('app_home') }}"
       {% if app.request.get('_route') == 'app_home' %}class="active"{% endif %}>
        {{ ux_icon('ph:house-line', {'class': 'icon'}) }}
        Accueil
    </a>

    <a href="{{ path('app_contact') }}"
       {% if app.request.get('_route') == 'app_contact' %}class="active"{% endif %}>
        {{ ux_icon('lucide:mail', {'class': 'icon'}) }}
        Contact
    </a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_cakecategory_default_index') }}"
           {% if 'app_cakecategory_' in app.request.get('_route') %}class="active"{% endif %}>
            {{ ux_icon('tabler:brand-cakephp', {'class': 'icon'}) }}
            Catégories de Gâteaux
        </a>
    {% endif %}

    <a href="{{ path('app_cake_default') }}"
       {% if 'app_cake_' in app.request.get('_route') %}class="active"{% endif %}>
        {{ ux_icon('game-icons:pie-slice', {'class': 'icon'}) }}
        Gâteaux
    </a>

    {% if not app.user %}
        <a href="{{ path('app_login') }}"
           class="login {% if app.request.get('_route') == 'app_login' %}active{% endif %}">
            {{ ux_icon('material-symbols:login', {'class': 'icon'}) }}
            Connexion
        </a>
    {% else %}
        <a href="{{ path('app_logout') }}" class="login"
           onclick="return window.confirm('Vous partez déjà ?')">
            {{ ux_icon('mdi:exit-run', {'class': 'icon'}) }}
            Déconnexion
        </a>
    {% endif %}
</nav>
